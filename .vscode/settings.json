{
    "liveServer.settings.port": 5501,
    "actionButtons": {
        "reloadButton": null,
        "loadNpmCommands": false,
        "commands": [
            {
                "name": "Build",
                "singleInstance": true,
                "color": "#af565c",
                "command": "./node_modules/.bin/esbuild ./dev/*.ts ./dev/**/*.ts ./dev/**/*.js --outdir=docs",
            },
        ]
    },
    "files.exclude":{
        "**/*.js": {"when": "$(basename).ts"}
    }
}